<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.QuickSafetyService" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- 1. Add this new style for the Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <!-- Set the splash screen background, using your app's color -->
        <item name="windowSplashScreenBackground">@color/deep_slate_blue</item>

        <!-- Set the icon to be displayed. Should be your logo. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>

        <!-- Set the theme to apply after the splash screen is done -->
        <item name="postSplashScreenTheme">@style/Theme.QuickSafetyService</item>

    </style>
</resources>
